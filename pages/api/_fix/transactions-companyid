import dbConnect from "@/lib/dbConnect";
import jwt from "jsonwebtoken";
import Transaction from "@/models/Transaction";

export default async function handler(req, res) {
  if (req.method !== "GET" && req.method !== "POST") {
    return res.status(405).json({ message: "GET veya POST desteklenir" });
  }

  try {
    await dbConnect();

    // ğŸ” Token kontrol (sadece admin)
    const auth = req.headers.authorization || "";
    if (!auth.startsWith("Bearer ")) {
      return res.status(401).json({ message: "Token gerekli" });
    }

    const token = auth.split(" ")[1];
    const decoded = jwt.verify(token, process.env.JWT_SECRET);

    if (decoded.role !== "admin") {
      return res.status(403).json({ message: "Sadece admin" });
    }

    // ğŸ” EKSÄ°K companyId OLANLAR
    if (req.method === "GET") {
      const list = await Transaction.find({
        companyId: { $exists: false },
      }).lean();

      return res.status(200).json({
        count: list.length,
        list,
      });
    }

    // ğŸ› ï¸ DÃœZELT (admin firmasÄ±na baÄŸla)
    if (req.method === "POST") {
      const { companyId } = req.body;

      if (!companyId) {
        return res.status(400).json({
          message: "companyId gÃ¶nderilmeli",
        });
      }

      const result = await Transaction.updateMany(
        { companyId: { $exists: false } },
        { $set: { companyId } }
      );

      return res.status(200).json({
        success: true,
        modifiedCount: result.modifiedCount,
      });
    }
  } catch (err) {
    console.error("FIX TRANSACTIONS ERROR:", err);
    return res.status(500).json({ message: err.message });
  }
}
